<h1>New attendance</h1>
<%= form_with(model: @attendances, url: attendances_path, method: :post, local: true) do |form| %>
  <div class="card">
    <div class="card-body">
        <div class="mb-3">
            <%= form.label :date ,{ class: "form-label"} %>
            <%= form.date_field :date, { class: "form-control", placeholder: "Site Code", autocomplete: "name" } %><br />
        </div>
        <div class="mb-3">
            <%= form.hidden_field :user_id,{ class: "form-label", value: current_user.id} %>
            <br />
        </div>    

            <%= form.button :submit %>
    </div>
  </div>
<% end %>

